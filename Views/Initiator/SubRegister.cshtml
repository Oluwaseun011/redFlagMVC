@model redFlag.Dtos.MiniCreateInitiatorRequestModel
@{ Layout = "~/Views/Shared/_Layouts.cshtml";
    ViewData["Title"] = "Initiator Register"; }

<section>

    <h5>REGISTER</h5>

    <form asp-action="Register" method="post" class="forms" enctype="multipart/form-data">
        <div class="inputs">
            <div class="inp">
                <input type="email" name="email" id="email" placeholder="Email adress" class="input-size">
            </div>
            <div class="inp">
                <input type="password" name="password" id="password" placeholder="Password" class="input-size">
            </div>
            <div class="inp">
                <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" class="input-size">
            </div>
            <div class="inp">
                <input type="text" name="phoneNumber" id="phoneNumber" placeholder="Phone Number" class="input-size">
            </div>
            <div>
                <input type="submit" value="Register" id="form-submit">
            </div>
        </div>
    </form>

</section>

