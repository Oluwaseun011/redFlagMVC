@{ Layout = "~/Views/Shared/_Layouts.cshtml";
    ViewData["Title"] = "User Login"; }

<section>
    <h5>LOGIN</h5>

    <form asp-action="Login" method="post" class="forms" enctype="multipart/form-data">
        <div class="inputs">
            <div class="inp">
                <input type="email" name="email" id="email" placeholder="Email adress" class="input-size">
            </div>
            <div class="inp">
                <input type="password" name="password" id="password" placeholder="Password" class="input-size">
            </div>
            <div>
                <input type="submit" value="Login" id="form-submit">
            </div>
        </div>
    </form>

    <div class="down">
        <p>Don't have an account?</p>
        <a asp-controller="Initiator" asp-action="Register">
            <p>Register</p>
        </a>
        <a asp-controller="Initiator" asp-action="SubRegister">
            <p>Report an Emergency</p>
        </a>
    </div>
</section>
